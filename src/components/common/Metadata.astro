---
import { AstroSeo } from '@astrolib/seo'
import type { Props as AstroSeoProps } from '@astrolib/seo'

import type { MeteDataProps } from '@/types/index'

export interface Props extends MeteDataProps {}

const {
  url: { pathname },
  props: {
    metadata: { images = [], ...metadata }
  }
} = Astro

const domin = __DOMAIN__

const seo: AstroSeoProps = {
  ...metadata,
  titleTemplate: '%s',
  noindex: false,
  nofollow: false,
  canonical: domin + pathname,
  openGraph: {
    url: domin,
    site_name: domin + pathname,
    type: 'website',
    locale: 'en',
    images
  },
  twitter: {
    cardType: 'summary'
  }
}
---

<AstroSeo {...seo} />
