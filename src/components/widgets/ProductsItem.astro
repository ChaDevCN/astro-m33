---
import Image from "../common/Image.astro";
import Button from "../ui/Button.astro";
export interface Props {
  showPic: string;
  name: string;
  path: string;
  [key: string]: any;
}
const { showPic, name, path } = Astro.props;
---

<li>
  <a class="block relative overflow-hidden group/products" href={path}>
    <Image
      src={showPic}
      alt={name}
      class:list={[
        "lg:group-hover/products:scale-110 transition-all duration-300",
      ]}
    />
    <div
      class="absolute w-full h-full top-0 left-0 flex flex-col justify-between"
      style="padding:3.125vw 2.60vw 2.60vw;"
    >
      <div class="line-clamp-2 ... lg:font-medium lg:text-[28px] text-[20px]">
        {name}
      </div>
      <Button
        type="button"
        icon="tabler:arrow-up-right"
        class:list={[
          "btn-primary group-hover/products:bg-haeder-bg group-hover/products:border-haeder-bg group-hover/products:text-white",
        ]}>SHOW NOW</Button
      >
    </div>
  </a>
</li>
<style scoped></style>
