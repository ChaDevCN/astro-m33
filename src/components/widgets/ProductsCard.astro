---
import Image from '../common/Image.astro';
import { Icon } from 'astro-icon/components';
export interface Props {
  knowledgePic: string;
  name: string;
  path: string;
  [key: string]: string;
}
const { knowledgePic, name, path, showPic } = Astro.props;
---

<li>
  <a href={path} class="group/knowledge block">
    <div class="relative overflow-hidden">
      <Image
        src={knowledgePic || showPic}
        alt={name}
        class:list={['lg:group-hover/knowledge:scale-110 transition-all duration-300 lg:w-auto', 'w-full']}
      />
      <div
        class:list={[
          'inline-flex items-center justify-end gap-[5px]',
          'absolute  bottom-0 right-0',
          'lg:w-16 lg:h-14 h-[45px] w-auto',
          'lg:px-[20px] px-[10px] whitespace-nowrap',
          'bg-haeder-bg text-haeder-text',
          'lg:group-hover/knowledge:w-[170px]',
          'transition-all duration-300',
        ]}
      >
        <span class="lg:opacity-0 lg:group-hover/knowledge:opacity-100 transition-all duration-300">VIEW MORE</span>
        <div>
          <Icon name="tabler:arrow-up-right" class="w-7 h-7 ml-1 -mr-1.5 rtl:mr-1 rtl:-ml-1.5 inline-block" />
        </div>
      </div>
    </div>
    <div class="line-clamp-2 ... sm:text-[22px] text-title text-[16px] font-medium sm:mt-8 mt-5">
      {name}
    </div>
  </a>
</li>
