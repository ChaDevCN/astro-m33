---
import { getBaseInfo } from '@/lib/getBaseInfo'
import config from '../../config.yml'

const {
  site: { staticBase }
} = config

const BASE_URL = import.meta.env.MODE === 'production' ? '' : staticBase

const { icourl } = await getBaseInfo()
---

<link rel='icon' type='image/x-icon' href={BASE_URL + icourl} />
