---
import Image from '@/components/common/Image.astro';
export interface Props {
  options: {
    productPics: {
      url: string;
      type: string;
    }[];
  };
}
const {
  options: { productPics },
} = Astro.props;
---

<div class:list={['flex justify-between lg:w-[44.57%] w-full']}>
  <div
    id="products-min-swiper"
    class:list={[
      'swiper mySwiper swiper-initialized swiper-horizontal swiper-free-mode swiper-watch-progress swiper-backface-hidden swiper-thumbs lg:block hidden w-20',
    ]}
  >
    <div class="swiper-wrapper h-20 w-20">
      {
        productPics.map(
          (item) =>
            item.url && (
              <div
                class:list={[
                  'swiper-slide',
                  //   "border-haeder-bg border-2 ",
                  'mdmain-swiper',
                  'bg-[#f5f5f5] rounded-md flex justify-center items-center h-auto cursor-pointer',
                ]}
              >
                <Image src={item.url} alt={'banner'} class:list={['max-w-[calc(100%_-_14px)]', 'max-h-[65px]']} />
              </div>
            )
        )
      }
    </div>
  </div>
  <div
    class:list={[
      'swiper mySwiper2 swiper-initialized swiper-horizontal swiper-backface-hidden',
      'w-[calc(100%_-_110px)]',
    ]}
    id="products-swiper"
  >
    <div class:list={['swiper-wrapper']}>
      {
        productPics.map(
          (item) =>
            item.url && (
              <div
                class:list={[
                  'swiper-slide',
                  'rounded-xl flex justify-center items-center h-auto cursor-pointer bg-[#f5f5f5]',
                ]}
              >
                <Image
                  src={item.url}
                  alt={'banner'}
                  class:list={['max-w-full max-h-[80%]', 'h-auto rounded-xl', 'select-none']}
                />
              </div>
            )
        )
      }
    </div>
    <div class="swiper-button-prev swiper-md-prev lg:hidden block swiper-normal-button"></div>
    <div class="swiper-button-next swiper-md-next lg:hidden block swiper-normal-button"></div>
    <div class="swiper-scrollbar mdthumb-swiper-scrollbar lg:hidden block"></div>
  </div>
</div>
<style>
  .swiper-slide {
    background: #f5f5f5;
    border-radius: 5px;
    display: flex;
    justify-content: center;
    align-items: center;
    height: auto;
    aspect-ratio: 1 / 1;
    border: 2px solid transparent;
    cursor: pointer;
    position: relative;
  }
  #products-min-swiper .swiper-slide-thumb-active {
    border-color: var(--header-bg);
  }
  .swiper-normal-button {
    width: 45px;
    height: 45px;
    background-color: #fff;
    border-radius: 50%;
    box-shadow: 0 6px 6px 0px rgba(0, 114, 255, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: 600;
  }
  @media (min-width: 1024px) {
    .swiper-normal-button {
      display: none;
    }
  }
  .swiper-normal-button::after {
    font-size: 24px;
  }
</style>
