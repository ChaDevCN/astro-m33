---
import Section from '@/components/Section.astro'
import ProductsCard from '@/components/widgets/ProductsCard.astro'
import { filterHotItemsByKey } from '@/lib/filterHotItemsByKey.ts'
const result = await filterHotItemsByKey('knowledge')
---

<Section>
  <h2
    class='uppercase lg:text-4xl text-xl font-bold normal-tit-circle relative lg:pl-[21px] pl-[15px]'
  >
    PRODUCT RECOMMENDATIONS
  </h2>
  <p class='desc lg:pl-[21px] pl-[15px]'>
    Here we will showcase some of our main products
  </p>
  <ul class='grid lg:grid-cols-4 grid-cols-2 lg:gap-[20px_1%] gap-5'>
    {
      result.length > 0 &&
        result.slice(0, 6).map((item) => <ProductsCard {...item} />)
    }
  </ul>
</Section>
