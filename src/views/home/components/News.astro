---
import { filterHotItemsByKey } from '@/lib/filterHotItemsByKey.ts';

import Section from '@/components/Section.astro';
import NewsCard from '@/components/widgets/NewsCard.astro';

const result = await filterHotItemsByKey('news');
---

<Section>
  <h2 class="uppercase lg:text-4xl text-xl font-bold normal-tit-circle relative lg:pl-[21px] pl-[15px]">
    APPLICATION AREA
  </h2>
  <p class="desc lg:pl-[21px] pl-[15px]">This is the industry in which our product is used</p>
  <ul class="grid lg:grid-cols-3 grid-cols-2 lg:gap-[20px_1%] gap-5">
    {result.length > 0 && result.slice(0, 6).map((item) => <NewsCard {...item} />)}
  </ul>
</Section>
