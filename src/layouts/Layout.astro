---
import CustomStyles from "@/components/CustomStyles.astro";
import BasicScripts from "@/components/common/BasicScripts.astro";
import HomeSwiper from "@/components/common/HomeSwiperScripts.astro";
import CommonMeta from "@/components/common/CommonMeta.astro";
import Resources from "@/components/common/Resources.astro";
import Favicons from "@/components/Favicons.astro";
import Metadata from "@/components/common/Metadata.astro";
import Wmkc from "@/components/widgets/Wmkc.astro";

import type { MeteDataProps } from "@/types/index";

import "@/assets/styles/tailwind.css";

export interface Props extends MeteDataProps {}

const { metadata } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <Favicons />
    <CommonMeta />
    <CustomStyles />
    <Metadata metadata={metadata} />
    <Resources />
    <!-- <script
      defer
      src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.x.x/dist/cdn.min.js"
    ></script> -->
  </head>
  <body>
    <Wmkc />
    <slot />
    <BasicScripts />
    <HomeSwiper />
  </body>
</html>
